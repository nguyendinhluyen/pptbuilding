            <form method="POST" name="petprofile" enctype="multipart/form-data" 
                  class="col-xs-12" style="padding:0px">
                <div class="main_register">
                    <fieldset class="fieldset_reg_info">
                        <div class="col-xs-12 col-sm-6"
